{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "source_dataflow",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "targetMaleData",
						"type": "DatasetReference"
					},
					"name": "targetMaleDataSource"
				}
			],
			"transformations": [
				{
					"name": "split1GenderMale"
				},
				{
					"name": "summerizeMaleData"
				}
			],
			"scriptLines": [
				"source(output(",
				"          age as short,",
				"          sex as boolean,",
				"          cp as short,",
				"          trestbps as short,",
				"          chol as short,",
				"          fbs as boolean,",
				"          restecg as short,",
				"          thalach as short,",
				"          exang as boolean,",
				"          oldpeak as double,",
				"          slope as short,",
				"          ca as short,",
				"          thal as short,",
				"          target as boolean",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 split(sex,",
				"     disjoint: false) ~> split1GenderMale@(maleData, FemaleData)",
				"split1GenderMale@maleData aggregate(groupBy(age,",
				"          sex),",
				"     {Maximum Target} = max(target),",
				"          sex = count(sex),",
				"          cp = min(cp)) ~> summerizeMaleData",
				"summerizeMaleData sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> targetMaleDataSource"
			]
		}
	}
}